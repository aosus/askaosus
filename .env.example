# Matrix Configuration
MATRIX_HOMESERVER_URL=https://matrix.org
MATRIX_USER_ID=@askaosus:matrix.org
MATRIX_PASSWORD=your_matrix_password_here
MATRIX_DEVICE_NAME=askaosus-python
MATRIX_STORE_PATH=/app/data/matrix_store

# Discourse Configuration
DISCOURSE_BASE_URL=https://discourse.aosus.org
DISCOURSE_API_KEY=your_discourse_api_key_here
DISCOURSE_USERNAME=your_discourse_username_here

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your_llm_api_key_here
LLM_BASE_URL=
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# OpenRouter-specific Configuration (only used when LLM_PROVIDER=openrouter)
# Sort providers by throughput, latency, or price (optional)
# LLM_OPENROUTER_SORTING=throughput
# Manually select a specific provider (optional, overrides sorting)
# LLM_OPENROUTER_PROVIDER=anthropic

# Bot Behavior Configuration
BOT_RATE_LIMIT_SECONDS=1.0
BOT_MAX_SEARCH_RESULTS=5
BOT_DEBUG=false
# Maximum number of search iterations (default: 3)
BOT_MAX_SEARCH_ITERATIONS=3
# Reply behavior: ignore, mention, watch (default: mention)
BOT_REPLY_BEHAVIOR=mention

# Logging Configuration
LOG_LEVEL=INFO
# LLM-specific log level (DEBUG, INFO, LLM, WARNING, ERROR)
LLM_LOG_LEVEL=LLM
# Exclude matrix-nio library logs from output (true/false)
EXCLUDE_MATRIX_NIO_LOGS=false
